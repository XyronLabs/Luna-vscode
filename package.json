{
    "name": "luna-vscode",
    "displayName": "Luna",
    "description": "Luna support for VS Code",
    "version": "1.2.3",
    "publisher": "ACharLuk",
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Snippets",
        "Extension Packs",
        "Other"
    ],
    "activationEvents": [
        "onCommand:luna.run.current",
        "onCommand:luna.run.main",
        "onCommand:luna.initproject",
        "onLanguage:lua"
    ],

    "main": "./out/src/extension",
    
    "contributes": {
        "snippets": [
            {
                "language": "lua",
                "path": "./snippets/luna.json"
            }
        ],

        "languages": [
            {
                "id": "lua",
                "extensions": [
                    "luna"
                ]
            }
        ],

        "commands": [
            {
                "command": "luna.run.current",
                "title": "Run current file",
                "category": "Luna",
                "icon":{
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.run.main",
                "title": "Run main.luna",
                "category": "Luna",
                "icon":{
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.initproject",
                "title": "Create a Luna project",
                "category": "Luna",
                "icon":{
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            }
        ],

        "keybindings":[
            {
                "command": "luna.run.current",
                "key": "F12"
            },
            {
                "command": "luna.run.main",
                "key": "Shift+F12"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "luna",
            "properties": {
                "luna.version": {
                    "type": "string",
                    "default": null,
                    "description": "Luna version currently installed"
                },
                "luna.isLunaProject": {
                    "type": "boolean",
                    "default": false,
                    "description": "Defines if this workspace is a Luna project"
                }
            }
        }
    },

    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },

    "dependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "extract-zip": "^1.6.5"
    },

    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32",
        "extract-zip": "^1.6.5"
    }
}