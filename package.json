{
    "name": "luna-vscode",
    "displayName": "Luna",
    "description": "Luna support for VS Code",
    "version": "1.6.1",
    "publisher": "ACharLuk",
    "icon": "logo.png",
    "repository": {
        "url": "https://github.com/XyronLabs/Luna-vscode"
    },
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Snippets",
        "Extension Packs",
        "Other"
    ],
    "activationEvents": [
        "onCommand:luna.run.current",
        "onCommand:luna.run.main",
        "onCommand:luna.initproject",
        "workspaceContains:*.luna"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "snippets": [
            {
                "language": "lua",
                "path": "./snippets/luna.json"
            }
        ],
        "languages": [
            {
                "id": "lua",
                "extensions": [
                    "luna"
                ]
            }
        ],
        "commands": [
            {
                "command": "luna.run.current",
                "title": "Run current file",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.run.main",
                "title": "Run main.luna",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.initproject",
                "title": "Create a Luna project",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.update",
                "title": "Check for updates",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.forceupdate",
                "title": "Force update",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.open.wiki",
                "title": "Open wiki",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.open.output",
                "title": "Show Luna output",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.extensions.install",
                "title": "Install an extension",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.extensions.update",
                "title": "Update Luna extensions",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.extensions.remove",
                "title": "Remove an extension",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            },
            {
                "command": "luna.extensions.forceupdate",
                "title": "Force update Luna extensions",
                "category": "Luna",
                "icon": {
                    "dark": "logo.png",
                    "light": "logo.png"
                }
            }
        ],
        "keybindings": [
            {
                "command": "luna.run.main",
                "key": "F12",
                "mac": "Cmd+R"
            },
            {
                "command": "luna.run.current",
                "key": "Shift+F12",
                "mac": "Cmd+Shift+R"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "luna",
            "properties": {
                "luna.version": {
                    "type": "string",
                    "default": null,
                    "description": "Luna version currently installed"
                },
                "luna.isLunaProject": {
                    "type": "boolean",
                    "default": false,
                    "description": "Defines if this workspace is a Luna project"
                },
                "luna.autoHideOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Hides Luna output when it finishes updating"
                },
                "luna.autoUpdateBinaries": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check for Luna binaries updates automatically"
                },
                "luna.autoUpdateExtensions": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check for Luna extensions updates automatically"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "extract-zip": "^1.6.5",
        "luna-manager": "^0.2.10",
        "vscode": "^1.0.0"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
